extends ../../admin/adminlayout

block content
    h1 Edit Category
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post', action='/admin/categories/edit/#{category._id}')
        .form-group
            label Name
            input.form-control(name='name', type='text', value='#{category.name}')
        input.btn.btn-primary(name='submit', type='submit', values='Submit')
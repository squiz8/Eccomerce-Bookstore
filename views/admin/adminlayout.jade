doctype html
html
  head
    title The Bookstore
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
  body
      nav.navbar.navbar-inverse.navbar-fixed-top
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation          
              span.icon-bar    
              span.icon-bar     
              span.icon-bar
            a.navbar-brand(href='/') The Bookstore
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li(class=(title == 'Dashboard' ? 'active' : ''))
                a(href='/admin') Dashboard 
              if !user
                  li(class=(title == 'Books' ? 'active' : ''))
                    a(href='/admin/books') Books
                  li(class=(title == 'Categories' ? 'active' : ''))
                    a(href='/admin/categories') Categories
                  li(class=(title == 'Home' ? 'active' : ''))
                    a(href='/' target='_blank') View Website
            ul.nav.navbar-nav.navbar-right
              if user
                  li
                    a(href='/users/logout') Logout
      .container
      div.row
        div.col-lg-12
          != messages()
          block content 
    
  footer
    div.row
      .col-lg-12
        p The Bookstore &copy; 2020 | 
          a(href="/admin") Manage
      
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")   
  script(src="/javascripts/bootstrap.js")
  script(src="/javascripts/main.js")



        
        
        


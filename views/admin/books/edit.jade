extends ../../admin/adminlayout

block content
    h1 Edit Book 
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post', action='/admin/books/edit/#{book._id}')
        .form-group
            label Title
            input.form-control(name='title', type='text', value='#{book.title}')
        .form-group
            label Author
            input.form-control(name='author', type='text', value='#{book.author}')
        .form-group
            label Publisher
            input.form-control(name='publisher', type='text', value='#{book.publisher}')
        .form-group
            label Price
            input.form-control(name='price', type='text', value='#{book.price}')
        .form-group
            label Category:
            select.form-control(name='category')   
                each category, i in categories
                    option(value="#{category.name}") #{category.name}
        .form-group
            label Description:
            textarea.form-control(name='description') #{book.description}
        .form-group
            label Cover Image Url
            input.form-control(name='coverimageurl', type='text', value='#{book.coverimage}')
        input.btn.btn-primary(name='submit', type='submit', values='Submit')
